<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_delivery_jobs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delivery Jobs Assigned"
        android:textSize="20sp"
        android:layout_margin="8dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_delivery_jobs">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/invoice_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invoice Number: "/>
            <TextView
                android:id="@+id/recipient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recepient Name: "
                android:layout_below="@id/invoice_number"/>
            <TextView
                android:id="@+id/recipient_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recepient Address: "
                android:layout_below="@id/recipient_name"/>
            <TextView
                android:id="@+id/delivery_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Items to be delivered: "
                android:layout_below="@id/recipient_address"/>

            <TextView
                android:id="@+id/invoice_number_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/invoice_number"
                android:text="TEST"/>
            <TextView
                android:id="@+id/recipient_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/recipient_name"
                android:layout_alignTop="@id/recipient_name"
                android:text="TEST NAME"/>
            <TextView
                android:id="@+id/recipient_address_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/recipient_address"
                android:layout_alignTop="@id/recipient_address"
                android:text="TEST ADDRESS"/>
            <TextView
                android:id="@+id/delivery_items_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/delivery_items"
                android:layout_alignTop="@id/delivery_items"
                android:text="TEST ITEMS"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview_1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/invoice_number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invoice Number: "/>
            <TextView
                android:id="@+id/recipient_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recepient Name: "
                android:layout_below="@id/invoice_number_2"/>
            <TextView
                android:id="@+id/recipient_address_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recepient Address: "
                android:layout_below="@id/recipient_name_2"/>
            <TextView
                android:id="@+id/delivery_items_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Items to be delivered: "
                android:layout_below="@id/recipient_address_2"/>

            <TextView
                android:id="@+id/invoice_number_value_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/invoice_number_2"
                android:text="TEST"/>
            <TextView
                android:id="@+id/recipient_name_value_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/recipient_name_2"
                android:layout_alignTop="@id/recipient_name_2"
                android:text="TEST NAME"/>
            <TextView
                android:id="@+id/recipient_address_value_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/recipient_address_2"
                android:layout_alignTop="@id/recipient_address_2"
                android:text="TEST ADDRESS"/>
            <TextView
                android:id="@+id/delivery_items_value_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/delivery_items_2"
                android:layout_alignTop="@id/delivery_items_2"
                android:text="TEST ITEMS"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>